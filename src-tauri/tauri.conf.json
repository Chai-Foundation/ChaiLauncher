{
  "$schema": "https://schema.tauri.app/config/2.0.json",
  "productName": "ChaiLauncher",
  "version": "0.8.0-rc1",
  "identifier": "com.ChaiLauncher.app",
  "app": {
    "windows": [
      {
        "title": "ChaiLauncher",
        "width": 1600,
        "height": 900,
        "resizable": false,
        "fullscreen": false,
        "decorations": false,
        "transparent": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "rpm", "msi", "dmg", "app"],
    "icon": [
      "icons/icon.ico"
    ]
  },
  "plugins": {}
}
