{
  "$schema": "https://schema.tauri.app/capability/1.0.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "fs:allow-read-text-file",
    "fs:allow-write-text-file", 
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-read-dir",
    "fs:allow-create",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "shell:allow-open",
    "core:event:allow-listen",
    "core:event:allow-emit",
    "core:event:allow-unlisten",
    "core:event:default",
    "core:app:allow-name",
    "core:app:allow-version"
  ]
}